<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Hyperlink?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pp.s.printingpos.LandingPageController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button fx:id="printButton" text="Print"
            onAction="#handlePrintAction"
            style="-fx-font-size: 18px; -fx-min-width: 200px;"/>

    <Button fx:id="photocopyButton" text="Photocopy"
            onAction="#handlePhotocopyAction"
            style="-fx-font-size: 18px; -fx-min-width: 200px;"/>

    <Button fx:id="scanButton" text="Scan"
            onAction="#handleScanAction"
            style="-fx-font-size: 18px; -fx-min-width: 200px;"/>
    <Hyperlink text="Customize Pricing" onAction="#handleCustomizePricing"
               style="-fx-font-size: 14px;"/>
</VBox>